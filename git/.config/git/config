# general settings
[core]
	pager = /usr/share/git/diff-highlight/diff-highlight | less -RS -x1,5
[include]
	path = config.local
[transfer]
	fsckObjects = true
[user]
	name = Steven Benner
	signingKey = "2CD4EBA98A45335E"

# command settings
[blame]
	coloring = highlightRecent
	date = short
[branch]
	sort = -committerdate
[column]
	tag = auto dense
[commit]
	gpgSign = true
	verbose = true
[credential]
	helper = cache
[diff]
	algorithm = histogram
	colorMoved = plain
	compactionHeuristic = true
	mnemonicPrefix = true
[fetch]
	prune = true
[init]
	defaultBranch = master
[merge]
	conflictStyle = zdiff3
[pull]
	ff = only
[status]
	showUntrackedFiles = all
[tag]
	gpgSign = true
	sort = -version:refname

# color settings
[color "blame"]
	highlightRecent = 240, 36 month ago, 242, 24 month ago, 244, 12 month ago, 246, \
		9 month ago, 248, 6 month ago, 250, 3 month ago, 252, 2 month ago, 254, \
		1 month ago, 178, 3 weeks ago, 216, 2 weeks ago, 215, 1 week ago, 214
[color "diff"]
	commit = 214 bold
	frag = 38
	meta = yellow bold
	new = 76 bold
	old = 196 bold
	whitespace = red reverse
[color "diff-highlight"]
	newHighlight = 82 bold 22
	newNormal = 76 bold
	oldHighlight = 9 bold 52
	oldNormal = 196 bold

# aliases
[alias]
	activefiles = !git log --name-only --format=format: | grep --extended-regexp --invert-match '^$' | sort | uniq --count | sort --general-numeric-sort --reverse | head -25
	authors = shortlog --summary --numbered --no-merges
	graph = log --graph --branches --remotes --tags --date-order --pretty=format:'%C(033)%h %C(white)%s %C(dim cyan)[%aN] %C(green)(%ar)%C(auto)%d'
	incoming = !git fetch && git log ..FETCH_HEAD
	listdupes = !git ls-tree -r HEAD | cut -c 13- | sort | uniq -D --check-chars=40
	makehome = !git config user.email $(echo 'YWRtaW5Ac3RldmVuYmVubmVyLmNvbQo=' | base64 --decode) && git config commit.gpgSign true && git config tag.gpgSign true
	makework = !git config user.email $(echo 'c3RldmVuLmJlbm5lckBsaW5rc3lzLmNvbQo=' | base64 --decode) && git config commit.gpgSign false && git config tag.gpgSign false
	mergelog = log --merges --all --pretty=format:'%C(yellow)%h%C(reset) %C(green)%cr%C(reset) %C(blue)%cn%C(reset)%C(red)%d%C(reset) %s'
	outgoing = !git fetch && git log FETCH_HEAD..
	pullall = !zsh -ic 'git_pull_all'
	taggraph = log --graph --tags --date-order --simplify-by-decoration --pretty=format:'%ai %h %d'
	taglog = log --tags --date-order --date=short --simplify-by-decoration --pretty='format:%C(green)%ad %C(red)%h %C(reset)%D'
	whitespace = !git diff-tree --check $(git hash-object -t tree /dev/null) HEAD
	whoami = !git config --get user.name && git config --get user.email
